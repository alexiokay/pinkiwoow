{
  // hyttps://v3.nuxtjs.org/concepts/typescript
  
  "extends": "./.nuxt/tsconfig.json",
  "include": [
    "env.d.ts",
    ".nuxt/nuxt.d.ts",
    "**/*"
  ],
  "vueCompilerOptions": {
    "plugins": [
      "@volar/vue-language-plugin-pug"
    ]
  },
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "types": [
      "unplugin-icons/types/vue",
      "pinia-plugin-persist",
      "pinia",
      "@vueuse/nuxt",
      "@intlify/nuxt3",
      "@pinia/nuxt",

    ],
  },
  "exclude": ["node_modules",]
}
